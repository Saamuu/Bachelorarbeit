FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      setFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

defaultFieldValues
(
    volScalarFieldValue T 292
);

regions
(
    cylinderToCell
    {
        p1 (0 0 -0.6);
        p2 (0 0 1.4);
        radius 1;
        fieldValues
        (
            volScalarFieldValue T 313.15 //40°C
        );
    }  
    cylinderToCell
    {
        p1 (0 0 1.4);
        p2 (0 0 2.5);
        radius 1;
        fieldValues
        (
            volScalarFieldValue T 353.15 //80°C
        );
    }  
);


